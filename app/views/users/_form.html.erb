<%= form_with model: @user, url: new_user_path, class: "form-signin" do |f| %>

    <div class="form-label-group">
        <%= f.label :username %>
        <%= f.text_field :username, placeholder: "Username", class: "form-control", autofocus: true, required: true %> 
    </div>

    <div class="form-label-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Password", class: "form-control", required: true %>
    </div>

    <div class="form-label-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control", required: true%>
    </div>

    <%= f.submit "Register", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
    
<% end %>